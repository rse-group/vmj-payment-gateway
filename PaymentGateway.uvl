							KnowingDestinationAccount

		mandatory
			Payment {abstract}	
				optional
					PaymentChannel {abstract}	
						optional
							DirectDebit
							Ewallet
							RetailOutlet
							CreditCard
							VirtualAccount

				mandatory
					PaymentInterface {abstract}	
